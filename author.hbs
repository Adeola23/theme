{{!< default}}

<main id="gh-main" class="gh-main gh-canvas">
    {{#author}}
        <section class="gh-pagehead">
            {{#if profile_image}}
                <img class="gh-author-image gh-pagehead-image" src="{{profile_image}}" alt="{{name}}">
            {{else}}
                <span class="gh-author-icon">{{> icons/avatar}}</span>
            {{/if}}

            <header class="gh-pagehead-content">

                {{#if bio}}
                    <div class="gh-author-bio "> <p>Hey friends ‚Äî</p>  
                    <p class="gh-pagehead-description"> On this site we explore Software Engineering and a bunch of all other stuff. 
                        I‚Äôm interested in Distributed Systems, Data Structures and Algorithms, and Backend Development at the moment.</p>
                    </div>
                {{/if}}

                <div class="gh-author-meta">
                    {{#if location}}
                        <span class="gh-author-location">üìç Lagos</span>
                    {{/if}}
                    {{#if website}}
                        <a class="gh-author-website" href="{{website}}" target="_blank" rel="noopener">{{website}}</a>
                    {{/if}}
                    <div class="gh-author-social">
                        {{#if twitter}}
                            <a class="gh-author-twitter" href="{{twitter_url}}" target="_blank" rel="noopener">{{> icons/twitter}}</a>
                        {{/if}}
                        {{#if facebook}}
                            <a class="gh-author-facebook" href="{{facebook_url}}" target="_blank" rel="noopener">{{> icons/facebook}}</a>
                        {{/if}}
                    </div>
                </div>
            </header>
        </section>
    {{/author}}

    <div class="gh-feed">
        {{#foreach posts}}
            {{> loop}}
        {{/foreach}}
    </div>

    <button class="gh-loadmore gh-btn">Load more issues</button>
</main>